size 640 480
integrator direct
lightsamples 25
lightstratify on
output sphere.png

camera 0.0001 0 -4  0 0 0  0 1 0  45

maxverts 8

# Create a plane.

vertex -10 -1 -10
vertex -10 -1 10
vertex 10 -1 -10
vertex 10 -1 10

diffuse 0.3 0.3 0.5

tri 0 1 2
tri 1 3 2

# Create a square area light source.

quadLight  -1 1 -1  0 0 2  2 0 0  5 5 5
quadLight  -2 0 -1  0 0 2  1 1 0  0 0 3
quadLight  1 1 -1  0 0 2  1 -1 0  3 0 0

# Create a sphere which should cast a soft shadow onto the plane.

diffuse 0.3 0.3 0.3
sphere  0 -0.25 0  0.5
